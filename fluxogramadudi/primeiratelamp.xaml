<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fluxogramadudi.primeiratelamp"
             Title="Cadastro de matéria prima">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Cadastro de matéria prima"
               FontSize="Title"
               HorizontalOptions="Center" />

        <Label Text="Nome:" />
        <Entry Placeholder="Nome da matéria prima" />

        <Label Text="Unidade de medida:" />
        <Entry Placeholder="Unidade de medida (ex: kg, m, l)" />

        <Button Text="Salvar" 
                HorizontalOptions="End"
                BackgroundColor="LightGreen" 
                Clicked="OnSaveButtonClicked" />
    </VerticalStackLayout>
</ContentPage>

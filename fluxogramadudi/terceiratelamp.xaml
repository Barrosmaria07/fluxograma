<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fluxogramadudi.terceiratelamp">

    <StackLayout Padding="20" VerticalOptions="CenterAndExpand">

        <!-- Page Title -->
        <Label Text="Adição de estoque" FontSize="24" HorizontalOptions="Center" />

        <!-- Name Field -->
        <Label Text="Nome" />
        <Entry Placeholder="Nome" BackgroundColor="#ADD8E6" />

        <!-- Email Field -->
        <Label Text="E-mail" />
        <Entry Placeholder="E-mail" BackgroundColor="#ADD8E6" Keyboard="Email" />

        <!-- Phone Field -->
        <Label Text="Telefone" />
        <Entry Placeholder="Telefone" BackgroundColor="#ADD8E6" Keyboard="Telephone" />

    </StackLayout>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fluxogramadudi.terceiratelafornecedor">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Página de cadastro"
                   FontSize="24"
                   HorizontalOptions="Center"
                   Margin="0,20,0,20" />

            <Entry Placeholder="Nome do Fornecedor"
                   BackgroundColor="Pink"
                   Margin="0,0,0,10" />

            <Entry Placeholder="E-mail"
                   BackgroundColor="Pink"
                   Margin="0,0,0,10" />

            <Entry Placeholder="Telefone"
                   BackgroundColor="Pink"
                   Margin="0,0,0,10" />

            <Entry Placeholder="Endereço"
                   BackgroundColor="Pink"
                   Margin="0,0,0,20" />

            <Button Text="Ir"
                    BackgroundColor="Pink"
                    TextColor="White"
                    HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>


<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fluxogramadudi.quintatelafornecedor"
             BackgroundColor="#F2CCEF">

    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Text="Você deseja apagar esse cliente?" 
               FontSize="20" 
               HorizontalTextAlignment="Center"
               Grid.Row="0"/>

        <StackLayout Orientation="Horizontal"
                     Spacing="20"
                     HorizontalOptions="Center"
                     Grid.Row="1">

            <Button x:Name="SimButton" Text="Sim"
                    BackgroundColor="#B1E6A5" TextColor="Black"
                    CornerRadius="10"
                    WidthRequest="120"/>

            <Button x:Name="NaoButton" Text="Não"
                    BackgroundColor="#F292A9" TextColor="Black"
                    CornerRadius="10"
                    WidthRequest="120"/>
        </StackLayout>
    </Grid>
</ContentPage>

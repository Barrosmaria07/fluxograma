<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fluxogramadudi.terceiratelacliente">

    <ScrollView>
        <StackLayout Padding="20" VerticalOptions="CenterAndExpand">

            <!-- Page Title -->
            <Label Text="Página de cadastro" FontSize="24" HorizontalOptions="Center" />

            <!-- User Name -->
            <Label Text="Nome de usuário:" />
            <Entry Placeholder="Nome de usuário" BackgroundColor="#E0E8E0" />

            <!-- Email -->
            <Label Text="E-mail" />
            <Entry Placeholder="E-mail" BackgroundColor="#E0E8E0" Keyboard="Email" />

            <!-- Phone -->
            <Label Text="Telefone" />
            <Entry Placeholder="Telefone" BackgroundColor="#E0E8E0" Keyboard="Telephone" />

            <!-- Address -->
            <Label Text="Endereço" />
            <Entry Placeholder="Endereço" BackgroundColor="#E0E8E0" />

            <!-- Submit Button -->
            <Button Text="Ir" BackgroundColor="#E0E8E0" HorizontalOptions="End" VerticalOptions="End" />

        </StackLayout>
    </ScrollView>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fluxogramadudi.segundatelafuncionario"
             BackgroundColor="White">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <SearchBar x:Name="EmployeeSearch"
                   Placeholder="Procurar FuncionÃ¡rio" 
                   Grid.Row="0"
                   BackgroundColor="LightGray" />

        <Label x:Name="NenhumEncontradoLabel"
               Text="Nada encontrado"
               IsVisible="False"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Grid.Row="1" />

        <Button x:Name="FazerCadastroButton"
                Text="Fazer Cadastro"
                BackgroundColor="#FFC107"  
                TextColor="White"
                CornerRadius="10"
                Clicked="OnFazerCadastroClicked"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                Grid.Row="2" />
    </Grid>
</ContentPage>

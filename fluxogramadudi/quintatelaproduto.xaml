<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fluxogramadudi.quintatelaproduto"
             Title="Cadastro de Compra">
    <ContentPage.Content>
        <VerticalStackLayout Spacing="20">
            <Label 
            Text="Item"
             FontSize="18" />

            <Entry x:Name="ItemEntry" Placeholder="Digite o nome do item" />

            <Label 
             Text="Quantidade"
             FontSize="18" />
            
            
            <Entry x:Name="quantidadeEntry" Keyboard="Numeric" Placeholder="Digite a quantidade" />


            <Label x:Name="fornecedorLabel"
            Text="Fornecedor"
            FontSize="18" />

            <Entry x:Name="Fornecedor" Placeholder="Digite o nome do fornecedor" />
            <Button Text="Salvar" Clicked="Salvar_Clicked" />
            
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
